<?php

use PHPMailer\PHPMailer\PHPMailer;
use PHPMailer\PHPMailer\Exception;

require 'vendor/autoload.php';
require 'constantes.php';

$mail = new PHPMailer(true);

try {
    $mail->SMTPDebug = 2;
    $mail->isSMTP();

    $mail->Host = 'smtp.gmail.com';
    $mail->SMTPAuth = true;

    $mail->Username = 'inversalud.cl@gmail.com';
    $mail->Password = EMAIL_PASSWORD;

    $mail->SMTPSecure = 'tls';
    $mail->Port = 587;

    ## MENSAJE A ENVIAR

    $mail->setFrom('inversalud.cl@gmail.com');
    $mail->addAddress('raulfaria@gmail.com');

    $mail->isHTML(true);
    $mail->Subject = 'Esta es una prueba de email';
    $mail->Body = 'Hola mundo desde <b>phpmailer</b>';
    $mail->SMTPOptions = array(
        'ssl' => array(
        'verify_peer' => false,
        'verify_peer_name' => false,
        'allow_self_signed' => true
        )
    );

    $mail->send();

} catch (Exception $exception) {
    echo 'Algo salio mal', $exception->getMessage();
}
